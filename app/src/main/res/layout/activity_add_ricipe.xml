<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRicipe">

  <ImageView
    android:id="@+id/img_food"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:src="@drawable/ricardo_profile"
    />

  <ImageButton
      android:id="@+id/btn_addImgFood"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_below="@id/img_food"
      android:layout_alignParentStart="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="71dp"
      android:layout_marginTop="2dp"
      android:layout_marginBottom="469dp"
      android:src="@drawable/ic_baseline_add_a_photo_24" />

  <TextView
      android:id="@+id/tv_imgFood"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/img_food"
      android:layout_marginStart="9dp"
      android:layout_marginLeft="9dp"
      android:layout_marginTop="17dp"
      android:layout_toEndOf="@+id/btn_addImgFood"
      android:layout_toRightOf="@id/btn_addImgFood"
      android:paddingTop="10dp"
      android:text="Đăng hình đại diện món ăn"
      android:textSize="15dp" />


</RelativeLayout>